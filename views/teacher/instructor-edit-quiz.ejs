                                        } else if (document.getElementsByName("result")[0].value == "" || document.getElementsByName("list_answer")[0].value == "" || document.getElementsByName("list_answer")[1].value == "" || document.getElementsByName("list_answer")[2].value == "" || document.getElementsByName("list_answer")[3].value == "") {
