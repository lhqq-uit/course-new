            <div class="page-section bg-white border-bottom-2">
                <div class="container page__container">
                    <form method="POST" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-8">
                                <h4>Course title</h4>
                                <div class="form-group">
                                    <input type="text" name="name" class="form-control form-control-lg"
                                        placeholder="Course title" value="" required
                                        oninvalid="this.setCustomValidity('Enter course title Here')"
                                        oninput="this.setCustomValidity('')">
                                </div>

                                <h4>Description</h4>
                                <textarea class="form-control" name="description" rows="3"
                                    placeholder="Course description goes here.." required
                                    oninvalid="this.setCustomValidity('Enter Description Here')"
                                    oninput="this.setCustomValidity('')"></textarea>
                                <br>

                                <div class="row">
                                    <div class="col-sm-6">
                                        <h4>Image</h4>
                                        <div class="custom-file">
                                            <input type="file" name="image" id="file" class="custom-file-input"
                                                onchange="readURL(this);" required
                                                oninvalid="this.setCustomValidity('Enter File Image Here')"
                                                oninput="this.setCustomValidity('')" accept="image/*">
                                            <label for="file" class="custom-file-label image-course">Choose file
                                                image</label>
                                        </div>

                                        <div style="text-align: center; margin: 20px 0;">
                                            <img id="output-img" src="http://placehold.it/180x90" width="100%" height="auto"
                                                alt="your image" />
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <h4>Video trailer</h4>
                                        <div class="custom-file">
                                            <input type="file" name="trailer" id="file" class="custom-file-input"
                                                onchange="readURLVideo(this);" required
                                                oninvalid="this.setCustomValidity('Enter File video Here')"
                                                oninput="this.setCustomValidity('')" accept="video/*">
                                            <label for="file" class="custom-file-label image-course">Choose file video
                                                trailer</label>
                                        </div>
                                        <div style="text-align: center; margin: 20px 0;">
                                            <video id="output-video" src="" width="100%" height="auto" autoplay
                                                controls></video>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <h4>Level</h4>
                                <div class="form-group">
                                        <select id="custom-select" class="form-control custom-select" name="level">
                                            <option value="Beginner" selected>Beginner</option>
                                            <option value="Medium">Medium</option>
                                            <option value="Hard">Hard</option>
                                            <option value="Advanced">Advanced</option>
                                        </select>
                                    </div>
                                <h4>Category</h4>
                                <div class="form-group">
                                        <select id="custom-select" class="form-control custom-select" name="topic">
                                            <option value="AI" selected>AI</option>
                                            <option value="Internet of things">Internet of things</option>
                                            <option value="Web development" >Web development</option>
                                            <option value="Language">Language</option>
                                            <option value="STEM">STEM</option>
                                        </select>
                                    </div>

                                <div class="form-group">
                                    <div class="row">

                                        <div class="col-md-6">
                                            <h4>Price</h4>
                                            <div class="input-group form-inline">
                                                <span class="input-group-prepend"><span
                                                        class="input-group-text">$</span></span>
                                                <input type="text" name="price" class="form-control" value="" required
                                                    oninvalid="this.setCustomValidity('Enter Price Here')"
                                                    oninput="this.setCustomValidity('')">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <h4>Sale</h4>
                                            <div class="form-group">
                                                <div class="input-group form-inline">
                                                    <input type="text" name="sale" class="form-control" value=""
                                                        required oninvalid="this.setCustomValidity('Enter Sale Here')"
                                                        oninput="this.setCustomValidity('')">
                                                    <span class="input-group-prepend"><span
                                                            class="input-group-text">%</span></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <h4>Tags</h4>
                                <div class="form-group">
                                    <input type="text" name="tag" class="form-control" placeholder="enter, badges, here"
                                        required oninvalid="this.setCustomValidity('Enter User Name Here')"
                                        oninput="this.setCustomValidity('')">
                                    <small class="form-text text-muted">Separate tags with space or comma.</small>
                                </div>

