    <link type="text/css" href="/assets/css/material-icons.rtl.css" rel="stylesheet">

    <!-- Font Awesome Icons -->
    <link type="text/css" href="/assets/css/fontawesome.css" rel="stylesheet">
    <link type="text/css" href="/assets/css/fontawesome.rtl.css" rel="stylesheet">

    <!-- Preloader -->
    <link type="text/css" href="/assets/css/preloader.css" rel="stylesheet">
    <link type="text/css" href="/assets/css/preloader.rtl.css" rel="stylesheet">

    <!-- App CSS -->
    <link type="text/css" href="/assets/css/app.css" rel="stylesheet">
    <link type="text/css" href="/assets/css/app.rtl.css" rel="stylesheet">
    <script src="https://momentjs.com/downloads/moment-with-locales.min.js"></script>
    <script src="//content.jwplatform.com/libraries/Jq6HIbgz.js"></script>

</head>

<body class="layout-navbar-mini-fixed-bottom">

    <div class="preloader">
        <div class="sk-double-bounce">
            <div class="sk-child sk-double-bounce1"></div>
            <div class="sk-child sk-double-bounce2"></div>
        </div>
    </div>

    <!-- Header Layout -->
    <div class="mdk-header-layout js-mdk-header-layout">

        <!-- Header -->

        <%- include('../layout/header-dashboard', {avatar: infoStudent.avatar}); %>


        <!-- // END Header -->

        <!-- Header Layout Content -->
        <div class="mdk-header-layout__content page-content ">

            <div class="navbar navbar-list navbar-submenu navbar-light border-0 navbar-expand-sm"
                style="white-space: nowrap;">
                <div class="container flex-column flex-sm-row">
                    <nav class="nav navbar-nav navbar-list__item">
                        <div class="nav-item">
                            <div class="media flex-nowrap">
                                <div class="media-left mr-16pt">
                                    <a href="student-take-course.html"><img
                                            src="/upload/images/<%= lesson.course.avatar %>" width="40" alt="Angular"
                                            class="rounded"></a>
                                </div>
                                <div class="media-body">
                                    <a href="student-take-course.html"
                                        class="card-title text-body mb-0"><%= lesson.title %></a>
                                    <p class="lh-1 d-flex align-items-center mb-0">
                                        <span
                                            class="text-50 small font-weight-bold mr-8pt"><%= lesson.course.teacher.fullname %></span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </nav>
                    <ul class="navbar-list__item nav navbar-nav ml-sm-auto align-items-center align-items-sm-end">
                        <li class="nav-item active ml-sm-16pt">
                            <a href="#" class="nav-link">Video</a>
                        </li>
                        <li class="nav-item">
                            <a href="/upload/document/<%= lesson.document[0] %>" class="nav-link">Download Document</a>
                        </li>
                        <!-- <li class="nav-item">
                            <a href="#" class="nav-link">Notes</a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">Discussions</a>
                        </li> -->
                    </ul>
                </div>
            </div>
            <div class="bg-gradient-primary pb-lg-64pt py-32pt">
                <div class="container">
                    <nav class="course-nav">
                        <a href="#" data-toggle="tooltip" data-placement="bottom"
                            data-title="Getting Started with Angular: Introduction"><span
                                class="material-icons text-primary">check_circle</span></a>
                        <a data-toggle="tooltip" data-placement="bottom"
                            data-title="Getting Started with Angular: Introduction to TypeScript" class="active"
                            href="#"><span class="material-icons">account_circle</span></a>
                        <a data-toggle="tooltip" data-placement="bottom"
                            data-title="Getting Started with Angular: Comparing Angular to AngularJS" href="#"><span
                                class="material-icons">play_circle_outline</span></a>
                        <a data-toggle="tooltip" data-placement="bottom" data-title="Quiz: Getting Started with Angular"
                            href="student-take-quiz.html"><span class="material-icons">hourglass_empty</span></a>
                    </nav>

                    <div id="player"></div>

                    <div class="d-flex flex-wrap align-items-end mb-16pt">
                        <h1 class="text-white flex m-0"><%= lesson.title %></h1>
                        <!-- <p class="h1 text-white-50 font-weight-light m-0">50:13</p> -->
                    </div>

                    <p class="hero__lead measure-hero-lead text-white-50 mb-24pt"><%= lesson.description %></p>

                    <a href="#" class="btn btn-white">Resume lesson</a>
                </div>
            </div>
            <div class="navbar navbar-expand-sm navbar-submenu navbar-light navbar-list p-0 m-0 align-items-center">
                <div class="container page__container">
                    <ul class="nav navbar-nav flex align-items-sm-center">
                        <li class="nav-item navbar-list__item">
                            <div class="media align-items-center">
                                <span class="media-left mr-16pt">
                                    <img src="/avatar/<%= lesson.course.teacher.avatar %>" width="40" alt="avatar"
                                        class="rounded-circle">
                                </span>
                                <div class="media-body">
                                    <a class="card-title m-0"
                                        href="/profile/lesson.course.teacher._id"><%= lesson.course.teacher.fullname %></a>
                                    <p class="text-50 lh-1 mb-0">Instructor</p>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item navbar-list__item">
                            <i class="material-icons text-muted icon--left">schedule</i>
                            <%= lesson.course.total_time %>
                        </li>
                        <li class="nav-item navbar-list__item">
                            <i class="material-icons text-muted icon--left">assessment</i>
                            <%= lesson.course.level %>
                        </li>
                        <li class="nav-item ml-sm-auto text-sm-center flex-column navbar-list__item">
                            <div class="rating rating-24">
                                <div class="rating__item"><i class="material-icons">star</i></div>
                                <div class="rating__item"><i class="material-icons">star</i></div>
                                <div class="rating__item"><i class="material-icons">star</i></div>
                                <div class="rating__item"><i class="material-icons">star</i></div>
                                <div class="rating__item"><i class="material-icons">star_border</i></div>
                            </div>
                            <p class="lh-1 mb-0"><small class="text-muted">20 ratings</small></p>
                        </li>
                    </ul>
                </div>
            </div>



            <div class="page-section bg-white">
                <div class="container page__container">

                    <div class="mb-heading d-flex align-items-center">
                        <div class="flex">
                            <h4 class="card-title">Comments</h4>
                            <p class="card-subtitle">Latest comments</p>
                        </div>
                        <div class="d-flex align-items-center text-right">
                            <a href="#" class="btn btn-outline-secondary btn-sm"><i
                                    class="material-icons">keyboard_arrow_left</i></a>
                            <a href="#" class="btn btn-outline-secondary btn-sm ml-8pt"><i
                                    class="material-icons">keyboard_arrow_right</i></a>
                        </div>

                    </div>
                    <div class="col-12 mb-5 mt-5">
                        <form action="/<%= cmt._id %>" id="message-reply" method="POST">
                            <div class="input-group input-group-merge">
                                <input name="content" type="text" class="form-control form-control-appended" required=""
                                    placeholder="Reply Lesson">
                                <div class="input-group-append">
                                    <div class="input-group-text pl-0">
                                        <button class="btn btn-flush" type="submit"><i
                                                class="material-icons">send</i></button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <% if (cmt) { %>
                    <% cmt.comment.forEach(function(e){ %>
                    <div class="card">
                        <div class="card-body">
                            <div class="media">
                                <div class="media-left">
                                    <a href="/profile/<%= e.user._id %>" class="avatar avatar-sm">
                                        <img src="../avatar/<%= e.user.avatar %>" alt="Guy"
                                            class="avatar-img rounded-circle">
                                    </a>
                                </div>
                                <div class="media-body d-flex flex-column">
                                    <div class="d-flex align-items-center">
                                        <a href="/profile/<%= e.user._id %>"
                                            class="text-body"><strong><%= e.user.fullname %></strong></a>
                                        <small class="ml-auto text-muted">
                                            <script type="text/javascript">
                                                //let showtime = moment().startOf('hour').fromNow();
                                                document.write(moment("<%= e.time %>").fromNow());
                                                    //document.write(showtime);
                                            </script>
                                        </small><br>
                                        <% if (e.user._id == infoStudent._id) { %>
                                        <div class="ml-5 btn-group">
                                            <button type="button" class="btn btn-accent dropdown-toggle btn-sm"
                                                data-toggle="dropdown" aria-haspopup="true"
                                                aria-expanded="false"></button>
                                            <div class="dropdown-menu">
                                                <form action="/delete/<%= cmt._id %>/<%= e._id %>" method="post">
                                                    <button type="submit" class="dropdown-item" href="">Delete</button>
                                                </form>

                                            </div>
                                        </div>
                                        <% } else { %>

                                        <% } %>
                                    </div>

                                    <p class="mt-1 mb-0 text-70">
                                        <%= e.content %>
                                    </p>

                                </div>
                            </div>
                            <% if (e.reply.length > 0) { %>
                            <% for (let k = 0; k < e.reply.length; k++) { %>
                            <div class="container col-12">
                                <div
                                    class="media ml-sm-32pt mt-3 border rounded p-3 bg-light d-inline-flex measure-paragraph-max">
                                    <div class="media-left">
                                        <a href="/profile/<%= e.reply[k].user._id %>" class="avatar avatar-sm">
                                            <img src="../avatar/<%=  e.reply[k].user.avatar %>" alt="Guy"
                                                class="avatar-img rounded-circle">
                                        </a>
                                    </div>
                                    <div class="media-body">
                                        <div class="d-flex align-items-center">
                                            <a href="/profile/<%= e.reply[k].user._id %>" class="text-body"><strong>
                                                    <%= e.reply[k].user.fullname %>
                                                </strong></a>
                                            <small class="ml-5 text-muted">
                                                <script type="text/javascript">
                                                    //let showtime = moment().startOf('hour').fromNow();
                                                    document.write(moment("<%= e.reply[k].time %>").fromNow());
                                                                //document.write(showtime);
                                                </script>
                                            </small>
                                            <% if (e.reply[k].user._id == infoStudent._id) { %>

                                            <div class="ml-5 btn-group float-right">
                                                <button type="button" class="btn btn-accent dropdown-toggle btn-sm"
                                                    data-toggle="dropdown" aria-haspopup="true"
                                                    aria-expanded="false"></button>
                                                <div class="dropdown-menu">
                                                    <form
                                                        action="/delete/child/<%= cmt._id %>/<%= e._id %>/<%= e.reply[k]._id %>"
                                                        method="POST">
                                                        <button type="submit" class="dropdown-item"
                                                            href="">Delete</button>
                                                    </form>
                                                </div>
                                            </div>

                                            <% } else { %>

                                            <% } %>
                                        </div>
                                        <p class="mt-1 mb-0 text-70">
                                            <%= e.reply[k].content %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                            <% } %>
                        </div>
                        <div class="card-footer">
                            <form action="/<%= e._id %>/<%= cmt._id %>" id="message-reply" method="POST">
                                <div class="input-group input-group-merge">
                                    <input name="contentReply" type="text" class="form-control form-control-appended"
                                        required="" placeholder="Reply comment">
                                    <div class="input-group-append">
                                        <div class="input-group-text pl-0">
                                            <button class="btn btn-flush" type="button"><i
                                                    class="material-icons">send</i></button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <% }); %>
                    <% } %>
                </div>
            </div>



            <% include ../layout/footer %>
        </div>
        <!-- // END Header Layout Content -->

    </div>
    <!-- // END Header Layout -->



    <!-- jQuery -->
    <script src="/assets/vendor/jquery.min.js"></script>

    <!-- Bootstrap -->
    <script src="/assets/vendor/popper.min.js"></script>
    <script src="/assets/vendor/bootstrap.min.js"></script>

    <!-- Perfect Scrollbar -->
    <script src="/assets/vendor/perfect-scrollbar.min.js"></script>

    <!-- DOM Factory -->
    <script src="/assets/vendor/dom-factory.js"></script>

    <!-- MDK -->
    <script src="/assets/vendor/material-design-kit.js"></script>

    <!-- Fix Footer -->
    <script src="/assets/vendor/fix-footer.js"></script>

    <!-- Chart.js -->
    <script src="/assets/vendor/Chart.min.js"></script>

    <!-- App JS -->
    <script src="/assets/js/app.js"></script>

    <!-- Highlight.js -->
    <script src="/assets/js/hljs.js"></script>

    <!-- App Settings (safe to remove) -->
    <script src="/assets/js/app-settings.js"></script>

    <script>

        var player = jwplayer('player').setup({
            "playlist": [
                {
                    "sources": [
                        {
                            "default": false,
                            "file": "/upload/video/<%= lesson.video %>",
                            "label": "0",
                            // "type": "video",
                            "preload": "metadata"
                        }
                    ]
                }
            ],
            "primary": "html5",
            "hlshtml": true
        });
    </script>
</body>


